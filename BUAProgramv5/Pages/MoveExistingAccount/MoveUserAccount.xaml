<Page x:Class="BUAProgramv5.Pages.MoveExistingAccount.MoveUserAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BUAProgramv5.Pages.MoveExistingAccount"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="825"
      Loaded="MoveUser_PageLoad"
      Unloaded="Page_Unloaded"
      Title="Move User Account">

    <Grid Name="MoveExistingAccount_Grid">
        <Label x:Name="MoveUserAccount_MainLabel" Content="Move User Account" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="16" VerticalContentAlignment="Center" Margin="311,0,0,0" />
        <Label x:Name="User_Label" Content="User:*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,37,0,0" />
        <TextBox x:Name="UserSearch_Textbox" HorizontalAlignment="Left" Height="35" TextWrapping="Wrap" KeyUp="UserSearch_Textbox_KeyUp" Text="Last Name of User" VerticalAlignment="Top" Width="215" Margin="10,63,0,0" />
        <Label x:Name="UserNotFound_Label" Content="User Not Found" FontStyle="Italic" Foreground="Red" Visibility="Hidden" Margin="129,103,600,520" />
        <Label x:Name="Description_Label" Content="Description/Job Title:*" HorizontalAlignment="Left" VerticalAlignment="Top" Width="133" Margin="10,130,0,0" />
        <TextBox x:Name="Description_Textbox" HorizontalAlignment="Left" Height="35" TextWrapping="Wrap" KeyUp="Description_Textbox_KeyUp" VerticalAlignment="Top" Width="215" Margin="10,161,0,0" />
        <ComboBox x:Name="Site_Combobox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="215" Height="35" SelectionChanged="Site_Combobox_SelectionChanged" Margin="10,375,0,0" />
        <Label x:Name="Manager_Label" Content="Manager:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,229,0,0" />
        <ComboBox x:Name="Manager_Combobox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="215" Height="35" IsEditable="True" IsTextSearchEnabled="True" SelectionChanged="Manager_Combobox_SelectionChanged" Margin="10,260,0,0" />
        <Label x:Name="SiteMove_Label" Content="Site to move to:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" Margin="10,349,0,0" />
        <ListBox x:Name="User_Listbox" HorizontalAlignment="Right" Height="97" VerticalAlignment="Top" Width="420" SelectionChanged="User_Listbox_SelectionChanged" Margin="0,63,18,0" />
        <TextBox x:Name="UserDetails_Textbox" HorizontalAlignment="Right" Height="286" TextWrapping="Wrap" VerticalAlignment="Top" Width="420" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,175,18,0" />
        <Button x:Name="MoveUserAccount_Button" Content="Move User Account" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="157" IsEnabled="False" Click="MoveUSerAccount_Button_Click" Margin="0,0,18,145" />
    </Grid>
</Page>
