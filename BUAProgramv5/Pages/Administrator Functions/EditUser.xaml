<Page x:Class="BUAProgramv5.Pages.Administrator_Functions.EditUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BUAProgramv5.Pages.Administrator_Functions"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="825"
      Loaded="Edit_User_Loaded"
      Title="Edit User">

    <Grid>
        <Label x:Name="Name_Label" Content="Name:" HorizontalAlignment="Left" Margin=" 10,74,0,0" VerticalAlignment="Top" Height="28" Width="49"/>
        <Label x:Name="SecurityGroups_Label" Content="Security Groups:" HorizontalAlignment="Left" Margin="583, 76,0,0" VerticalAlignment="Top" Width="98"/>
        <Label x:Name="Template_Label" Content="Pick a Template:" HorizontalAlignment="Left" Margin=" 264,74,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ExistingTemplates_Combobox" HorizontalAlignment="Left" Margin="264,100,0,0" VerticalAlignment="Top" Width="181" SelectionChanged="ExistingTemplates_Combobox_SelectionChanged"/>
        <TextBox x:Name="Name_Textbox" HorizontalAlignment="Left" Height="23" Margin="10,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox x:Name="SecurityGroups_Textbox" HorizontalAlignment="Left" Height="203" Margin="583,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Label x:Name="EditUser_Label" Content="Edit User Templates" HorizontalAlignment="Left" Height="37" Margin="296,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="Edit_Button" Content="EDIT GROUPS" HorizontalAlignment="Left" Margin=" 583,308,0,0" VerticalAlignment="Top" Width="216" Click="Edit_Button_Click"/>
        <Button x:Name="Save_Button" Content="SAVE TEMPLATE" HorizontalAlignment="Left" Margin="629,523,0,0" VerticalAlignment="Top" Width="170" Click="Save_Button_Click"/>
    </Grid>
</Page>
