<Window x:Class="BUAProgramv5.Pages.Administrator_Functions.Windows.SecurityGroups"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BUAProgramv5.Pages.Administrator_Functions.Windows"
        mc:Ignorable="d"
        Title="SecurityGroups" Height="300" Width="300" ResizeMode="NoResize" Name="securityGroupWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="security_Listbox" Background="AntiqueWhite" Grid.Row="0" Grid.ColumnSpan="2" ItemsSource="{Binding Groups}" ScrollViewer.VerticalScrollBarVisibility="Visible" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Name="checkBox" Content="{Binding Name}" Tag="{Binding DistinguishedName}" IsChecked="{Binding Checked}" Checked="checkBox_Checked" Unchecked="checkBox_Unchecked" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="Cancel_Button" Content="CANCEL" HorizontalAlignment="Left" VerticalAlignment="Top" Width="134" Height="38" Click="Cancel_Button_Click" Margin="3,5,0,0" Grid.Row="1" />
        <Button x:Name="Submit_Button" Content="SUBMIT" HorizontalAlignment="Left" VerticalAlignment="Top" Width="134" Height="38" Click="Submit_Button_Click" Grid.Column="1" Margin="10,5,0,0" Grid.Row="1" />
    </Grid>
</Window>
