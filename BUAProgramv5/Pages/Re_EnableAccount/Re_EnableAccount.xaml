<Page x:Class="BUAProgramv5.Pages.Re_EnableAccount.Re_EnableAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BUAProgramv5.Pages.Re_EnableAccount"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="825"
      Loaded="Re_Enable_PageLoad"
      Unloaded="Page_Unloaded"
      Title="Re_EnableAccount">

    <Grid Name="Re_EnableAccount_Grid">
        <Label x:Name="Re_EnableAccount_MainLabel" Content="ReEnable User Account" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="305,10,0,0" />
        <TextBox x:Name="UserSearch_Textbox" HorizontalAlignment="Left" Height="27" TextWrapping="Wrap" Text="Last Name of User" VerticalAlignment="Top" Width="196" KeyUp="UserSearch_Textbox_KeyUp" Margin="10,53,0,0" />
        <Label x:Name="UserNotFound_Label" Content="User Not Found" FontStyle="Italic" Foreground="Red" Visibility="Hidden" Margin="118,80,611,542" />
        <Label x:Name="DescriptionJob_Label" Content="Description/Job Title:*" HorizontalAlignment="Left" VerticalAlignment="Top" Width="122" Margin="10,108,0,0" />
        <TextBox x:Name="JobTitle_Textbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="196" Margin="10,139,0,0" />
        <Label x:Name="Manager_Label" Content="Manager:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="122" Margin="10,178,0,0" />
        <ComboBox x:Name="Manager_Combobox" HorizontalAlignment="Left" IsEditable="True" IsTextSearchEnabled="True" VerticalAlignment="Top" Width="196" Margin="10,204,0,0" />
        <Label x:Name="Site_Label" Content="Site:*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,235,0,0" />
        <ComboBox x:Name="Site_Combobox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="28" Margin="10,264,0,0" />
        <Label x:Name="UserType_Label" Content="User Type:*" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Height="28" Margin="10,303,0,0" />
        <ComboBox x:Name="UserType_Combobox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="28" Margin="10,331,0,0" />
        <ListBox x:Name="User_Listbox" HorizontalAlignment="Right" VerticalAlignment="Top" Height="131" Width="415" ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="User_Listbox_SelectionChanged" Margin="0,46,10,0"/>
        <TextBox x:Name="User_Details_Textbox" HorizontalAlignment="Right" Height="269" Width="415" TextWrapping="Wrap" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnly="True" Margin="0,182,10,0" />
        <Button x:Name="Re_Enable_Account_Button" Content="ReEnable Account" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Click="Re_Enable_Account_Button_Click" IsEnabled="False" Margin="670,478,0,0" />
    </Grid>
</Page>
