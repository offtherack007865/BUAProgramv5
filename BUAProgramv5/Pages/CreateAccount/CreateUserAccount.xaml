<Page x:Class="BUAProgramv5.Pages.CreateAccount.CreateUserAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BUAProgramv5.Pages.CreateAccount"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="825"
      Loaded="CreateAccount_PageLoad"
      Unloaded="Page_Unloaded"
      Title="Create User Account">

    <Grid Name="CreateAccount_Grid">
        <Label x:Name="CreateAccount_MainLabel" Content="Create Account" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="FirstName_Label" Content="First Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,28,0,0" />
        <TextBox x:Name="FirstName_Textbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="109,28,0,0" KeyUp="CreateAccount_Grid_KeyUp" />
        <Label x:Name="MiddleInitial_Label" Content="Middle Init:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,62,0,0" RenderTransformOrigin="0.5,0.5" />
        <TextBox x:Name="MiddleInitial_Textbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="109,62,0,0" KeyUp="CreateAccount_Grid_KeyUp" />
        <Label x:Name="LastName_Label" Content="Last Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,97,0,0" />
        <TextBox x:Name="LastName_Textbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="109,97,0,0" KeyUp="CreateAccount_Grid_KeyUp" />
        <Label x:Name="UserName_Label" Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,133,0,0" />
        <TextBox x:Name="UserName_Textbox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" TextWrapping="Wrap" Width="120 " Margin="109,133,0,0"/>
        <Label x:Name="UsernameAvailability_Label" Content="Username Availability" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" FontStyle="Italic" Margin="104,164,0,0" Visibility="Hidden" />
        <Label x:Name="Description_Label" Content="Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,195,0,0" />
        <ComboBox x:Name="Description_Combobox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="120" Margin="109,195,0,0" />
        <Label x:Name="EmployeeID_Label" Content="Employee ID#:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,233,0,0" />
        <TextBox x:Name="EmployeeID_Textbox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="120" TextWrapping="Wrap" Margin="109,233,0,0" />
        <Label x:Name="Manager_Label" Content="Manager:*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,269,0,0" />
        <ComboBox x:Name="Manager_Combobox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" IsEditable="True" IsTextSearchEnabled="True" Margin="109,269,0,0" />
        <Label x:Name="Site_Label" Content="Site:*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,305,0,0" />
        <ComboBox x:Name="Site_Combobox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" SelectionChanged="Site_Combobox_SelectionChanged" Margin="109,305,0,0" />
        <Label x:Name="Department_Label" Content="Department:*" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden" Margin="6,341,0,0" />
        <TextBox x:Name="Department_Textbox" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Height="23" Width="120" Visibility="Hidden" Margin="109,341,0,0" />
        <Label x:Name="UserType_Label" Content="User Type:*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,379,0,0" />
        <ComboBox x:Name="UserType_Combobox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" SelectionChanged="UserType_Combobox_SelectionChanged" Margin="109,379,0,0" />
        <Label x:Name="Title_Label" Content="Title(DR, NP, etc)" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden" Margin="10,417,0,0" />
        <TextBox x:Name="Title_Textbox" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Width="120" Visibility="Hidden" Margin="109,417,0,0" />
        <Label x:Name="SiteInformation_Label" Content="Site Information" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,31,295,0" />
        <TextBox x:Name="SiteInformation_Textbox" HorizontalAlignment="Right" VerticalAlignment="Top" Height="186" Width="380" TextWrapping="Wrap" Text="{Binding Path=SiteInformation}" IsReadOnly="True" Margin="0,57,10,0" />
        <Label x:Name="GroupInformation_Label" Content="Group Information" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,243,281,0" />
        <TextBox x:Name="GroupInformation_Textbox" HorizontalAlignment="Right" VerticalAlignment="Top" Height="196" Width="380" TextWrapping="Wrap" Text="{Binding Path=GroupInformation}" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible" Margin="0,274,9,0" />
        <Button x:Name="AddGroups_Button" Content="ADD GROUPS" HorizontalAlignment="Right" VerticalAlignment="Top" Width="79" Click="AddGroups_Button_Click" Margin="0,480,10,0" />
        <Button x:Name="Reset_Button" Content="RESET" HorizontalAlignment="Right" VerticalAlignment="Top" Width="74" Click="Reset_Button_Click" Margin="0,514,91,0" />
        <Button x:Name="CreateAccount_Button" Content="CREATE" HorizontalAlignment="Right" VerticalAlignment="Top" Width="76" Click="CreateAccount_Button_Click" Margin="0,514,9,0" />
    </Grid>
</Page>
