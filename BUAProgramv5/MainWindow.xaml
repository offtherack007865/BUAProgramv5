<Controls:MetroWindow x:Class="BUAProgramv5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BUAProgramv5"
        mc:Ignorable="d"
        Loaded="MetroWindow_Loaded"
        Title="Build User Accounts" Name="mainWindow" Height="650" Width="825" ResizeMode="NoResize">
    <DockPanel>
        <Menu DockPanel.Dock="Top" IsMainMenu="True" BorderBrush="Black" BorderThickness="1">
            <MenuItem Header="File">
                <MenuItem Name="EditSiteInfo_Menu" Header="Edit Site Info" Visibility="Hidden" Click="EditSiteInfo_Menu_Click"></MenuItem>
                <MenuItem Name="EditUser_Menu" Header="Edit User" Visibility="Hidden" Click="EditUser_Menu_Click"></MenuItem>
                <MenuItem Name="Exit_Menu" Header="Exit" Click="Exit_Menu_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Account Options">
                <MenuItem Name="CreateNetworkFolder_Menu" Header="Add Network Folder" Click="CreateNetworkFolder_Menu_Click"></MenuItem>
                <MenuItem Name="CreateUserAccount_Menu" Header="Create New Account" Click="CreateUserAccount_Menu_Click"></MenuItem>
                <MenuItem Name="DisableUserAccount_Menu" Header="Disable Account" Click="DisableUserAccount_Menu_Click"></MenuItem>
                <MenuItem Name="ReEnableUserAccount_Menu" Header="ReEnable Account" Click="ReEnableUserAccount_Menu_Click"></MenuItem>
                <MenuItem Name="UnlockUserAccount_Menu" Header="Unlock Account" Click="UnlockUserAccount_Menu_Click"></MenuItem>
                <MenuItem Name="MoveUserAccount_Menu" Header="Move Account" Click="MoveUserAccount_Menu_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Name="NotificationBar_Control">
            <StatusBarItem>
                <TextBlock Name="StatusBar_TextBlock" Text="{Binding StatusText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StatusBarItem>
        </StatusBar>
        <Grid Name="MainWindow_Grid">
            <Frame x:Name="_NavigationFrame" NavigationUIVisibility="Hidden"/>
            <Image x:Name="SMG_Logo" Source="/summit-logo-sm.png" HorizontalAlignment="Center" VerticalAlignment="Top" Width="350" Height="90" />
            <Button x:Name="CreateAccount_Button" Content="CREATE ACCOUNT" HorizontalAlignment="Left" Margin="44,360,0,0" VerticalAlignment="Top" Width="122" Height="40" Grid.ColumnSpan="2" Grid.Column="1" Click="CreateUserAccount_Menu_Click"/>
            <Button x:Name="DisableAccount_Button" Content="DISABLE ACCOUNT" HorizontalAlignment="Left" Margin="329,360,0,0" VerticalAlignment="Top" Width="122" Height="40" Click="DisableUserAccount_Menu_Click"/>
            <Button x:Name="UnlockAccount_Button" Content="UNLOCK ACCOUNT" HorizontalAlignment="Left" Margin="329,503,0,0" VerticalAlignment="Top" Width="122" Height="40" RenderTransformOrigin="0.5,0.5" Click="UnlockUserAccount_Menu_Click"/>
            <Button x:Name="ReEnableAccount_Button" Content="RE-ENABLE ACCOUNT" HorizontalAlignment="Left" Margin="637,360,0,0" VerticalAlignment="Top" Width="122" Height="40" Click="ReEnableUserAccount_Menu_Click"/>
            <Button x:Name="MoveAccount_Button" Content="MOVE ACCOUNT" HorizontalAlignment="Left" Margin="637,503,0,0" VerticalAlignment="Top" Width="122" Height="40" Click="MoveUserAccount_Menu_Click"/>
            <Button x:Name="CreateNasFolder_Button" Content="CREATE NAS FOLDER" HorizontalAlignment="Left" Margin="44,502,0,0" VerticalAlignment="Top" Width="122" Height="41" Grid.ColumnSpan="2" Click="CreateNetworkFolder_Menu_Click"/>
        </Grid>

    </DockPanel>
</Controls:MetroWindow>
